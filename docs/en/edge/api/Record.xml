<?xml version = "1.0"?>
<?xml-stylesheet type="text/xsl" href="pb_help.xsl"?>
<API>
  <MODULE name="Record" parent="Rho.NFC">
    <HELP_OVERVIEW>NFC Record</HELP_OVERVIEW>
    <MORE_HELP>This class representative Record object</MORE_HELP>

    <TEMPLATES>
    </TEMPLATES>

    <PROPERTIES access="INSTANCE" generateAccessors="true">

      <DESC>list of properties supported by class</DESC>

      <PROPERTY name="ID" type="STRING" readOnly="true">
        <DESC>object ID</DESC>
        <PLATFORM>WM</PLATFORM>
      </PROPERTY>

      <PROPERTY name="TNF" type="STRING" readOnly="true">
        <DESC>see NFC_TNF_xxx constants in Rho.NFC.Adapter</DESC>
        <PLATFORM>WM</PLATFORM>
      </PROPERTY>
      <PROPERTY name="type" type="STRING" readOnly="true">
        <DESC>see NFC_RTD_xxx constants in Rho.NFC.Adapter</DESC>
        <PLATFORM>WM</PLATFORM>
      </PROPERTY>

    </PROPERTIES>

    <METHODS>


      <METHOD name="create" access="STATIC">
        <DESC>Creates custom record object</DESC>
        <PARAMS>
          <PARAM name="TNF" type="STRING">
            <DESC>see NFC_TNF_xxx constants in Rho.NFC.Adapter</DESC>
          </PARAM>
          <PARAM name="type" type="STRING">
            <DESC>see NFC_RTD_xxx constants in Rho.NFC.Adapter</DESC>
          </PARAM>
          <PARAM name="payload" type="ARRAY">
            <DESC></DESC>
            <PARAM type="INTEGER"/>
          </PARAM>
        </PARAMS>
        <RETURN type="Rho.NFC.Record">
          <DESC>Record object</DESC>
        </RETURN>
        <PLATFORM>WM</PLATFORM>
      </METHOD>

      <METHOD name="createUri" access="STATIC">
        <DESC>Create uri record object. NFC_TNF_WELL_KNOWN will be set as THF.</DESC>
        <PARAMS>
          <PARAM name="protocol" type="STRING">
            <DESC></DESC>
          </PARAM>
          <PARAM name="uri" type="STRING">
            <DESC></DESC>
          </PARAM>
        </PARAMS>
        <RETURN type="Rho.NFC.Record">
          <DESC>Record object</DESC>
        </RETURN>
        <PLATFORM>WM</PLATFORM>
      </METHOD>

      <METHOD name="createText" access="STATIC">
        <DESC>Creates text record object. NFC_TNF_WELL_KNOWN will be set as THF.</DESC>
        <PARAMS>
          <PARAM name="language" type="STRING">
            <DESC></DESC>
          </PARAM>
          <PARAM name="text" type="STRING">
            <DESC></DESC>
          </PARAM>
        </PARAMS>
        <RETURN type="Rho.NFC.Record">
          <DESC>Record object</DESC>
        </RETURN>
        <PLATFORM>WM</PLATFORM>
      </METHOD>

      <METHOD name="getPayload">
        <DESC>return array of bytes</DESC>
        <RETURN type="ARRAY">
          <PARAM type="INTEGER"/>
          <DESC></DESC>
        </RETURN>
        <PLATFORM>WM</PLATFORM>
      </METHOD>

      <METHOD name="getPayloadAsString">
        <DESC>return array of bytes</DESC>
        <RETURN type="STRING">
          <DESC></DESC>
        </RETURN>
        <PLATFORM>WM</PLATFORM>
      </METHOD>

      <METHOD name="getRecordById" access="STATIC">
        <DESC>get Record object by Id</DESC>
        <PARAMS>
          <PARAM name="ID" type="STRING">
            <DESC>Record Id</DESC>
          </PARAM>
        </PARAMS>
        <RETURN type="Rho.NFC.Record">
          <DESC>Record object</DESC>
        </RETURN>
        <PLATFORM>WM</PLATFORM>
      </METHOD>

      <METHOD name="close">
        <DESC>release resources</DESC>
        <RETURN type="STRING">
          <DESC>return NFC_SUCCESS if OK</DESC>
        </RETURN>
        <PLATFORM>WM</PLATFORM>
      </METHOD>

    </METHODS>
    <USER_OVERVIEW>
    </USER_OVERVIEW>

    <VER_INTRODUCED>1.0.0</VER_INTRODUCED>
    <PLATFORM>
    </PLATFORM>
  </MODULE>
</API>
