<h1>Results for <em style="color:#4c4074"><%= params[:q] %></em>:</h1>

<div id="results">
  <% search['results'].each do |result| %>
    <div class="result">
      <h2><a href="/<%= result['docid'] %>"><%=h result['title'] %></a></h2>
      <%= result['snippet_text'] %> <% if result['snippet_text'] %>...<% end %>
    </div>
  <% end %>
</div>
